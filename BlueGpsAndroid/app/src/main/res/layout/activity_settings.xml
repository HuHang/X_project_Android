<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.iftech.car.trace.ui.activity.SettingsActivity">

    <include
        android:id="@+id/title"
        layout="@layout/toolbar_back"/>
    <LinearLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/textview_top_bottom_border"
            android:layout_below="@+id/title"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/cacheTV1"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="@string/clear_cache"/>
        <TextView
            android:id="@+id/cacheTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/cacheTV1"
            android:textColor="@color/gray_deep"
            android:gravity="center_vertical|right"
            android:layout_weight="1"
            android:textSize="16sp"/>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/arrow_right_red"/>
    </LinearLayout>
    <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/textview_top_bottom_border"
            android:layout_below="@+id/rl1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/left2"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="注销账号"/>
    </RelativeLayout>

</RelativeLayout>
