<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_empty"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:src="@drawable/dash_board"
        android:tint="#ABABAB"
        android:layout_marginBottom="10dp"
        />
    <TextView
            android:id="@+id/empty_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_empty"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="This is your Dashboard."/>
    <TextView
        android:id="@+id/empty_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/empty_tv1"
        android:paddingTop="10dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="14sp"
        android:text="When you subscribe to what you are interested\nin,their latest posts will show up here."/>

</RelativeLayout>
