<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/titleImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_abstract_bank"/>
        <TextView
            android:id="@+id/titleTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:paddingLeft="6dp"
            android:textColor="@color/gray_deep"
            android:text="银行承兑汇票"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:layout_weight="1"
                android:backgroundTint="@color/circle_out">
                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/circle_in"
                    android:orientation="vertical">
                    <TextView
                            android:id="@+id/left_top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="25sp"
                            android:textColor="@color/light_red"
                            android:text="111111"/>
                    <TextView
                        android:id="@+id/left_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:textSize="10sp"
                        android:textColor="@color/gray_deep"
                        android:text="监管员（名）"/>
                </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:layout_marginBottom="20dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                        android:id="@+id/right_top_left"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="本地"
                        android:textSize="12sp"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray_deep"/>
                <TextView
                        android:id="@+id/right_top_right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:textColor="@color/orange"
                        android:gravity="center_vertical"
                        android:text="11111个"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                        android:id="@+id/right_bottom_left"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="外派"
                        android:textSize="12sp"
                        android:textColor="@color/gray_deep"/>
                <TextView
                        android:id="@+id/right_bottom_right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:textColor="@color/orange"
                        android:text="11111个"/>
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/gray_deep"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">
        <View style="@style/Lines"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/gray"/>
        <TextView
            android:id="@+id/footerTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/gray_deep"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="立即查看"/>
    </LinearLayout>
</LinearLayout>