<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_tracking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.iftech.car.trace.ui.activity.TrackingActivity">

    <!--<include-->
        <!--android:id="@+id/title"-->
        <!--layout="@layout/toolbar_right"/>-->


    <com.baidu.mapapi.map.MapView
        android:id="@+id/mapView"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_below="@+id/title"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:gravity="center">
        <ImageView
                android:id="@+id/showLines"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="3dp"
                android:background="@color/white"
                android:src="@drawable/line"
                android:visibility="gone"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/settingsRL"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/bg_live_tracking_settting"
        android:layout_alignParentBottom="true"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:text="设置及详情"/>
            <ImageView
                android:id="@+id/closeBtn"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/close"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingTop="10dp"
            android:layout_below="@+id/ll1">
            <LinearLayout
                android:id="@+id/leftRL"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="开始时间"/>
                <TextView
                    android:id="@+id/startTime"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:hint="请选择开始时间"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/centerRL"
                android:layout_width="30dp" 
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/leftRL">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/gray"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rightRL"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_toRightOf="@+id/centerRL"
                android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="结束时间"/>
                <TextView
                        android:id="@+id/endTime"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:hint="请选择结束时间"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/lines1"
            style="@style/Lines"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_below="@+id/rl1"/>
        <LinearLayout
            android:layout_below="@+id/lines1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="5dp">
            <TextView
                android:id="@+id/IMeiTV"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:paddingLeft="20dp"
                android:textColor="@color/black"
                android:text="IMEI:123456789554"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="60dp">
                <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_default_image"
                        android:layout_marginLeft="30dp"/>

                <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_default_image"
                        android:layout_marginLeft="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon_address"/>
                <TextView
                        android:id="@+id/currentLocation"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:text="未定位到当前位置"
                        android:gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center">
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:layout_weight="1">
                    <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/icon_lat"/>
                    <TextView
                            android:id="@+id/latTV"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:gravity="center_vertical"
                            android:textSize="12sp"
                            android:singleLine="true"
                            android:text=""/>

                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:layout_weight="1">
                    <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/icon_lng"/>
                    <TextView
                            android:id="@+id/lngTV"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:gravity="center_vertical"
                            android:textSize="12sp"
                            android:singleLine="true"
                            android:text=""/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_circle">
        <ImageView
                android:id="@+id/back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/arrow_left_red"/>

    </LinearLayout>
    <ImageView
            android:id="@+id/showSettings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="3dp"
            android:background="@color/white"
            android:src="@drawable/setup"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"/>
</RelativeLayout>
