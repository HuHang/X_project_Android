<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/titleImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_abstract_bank"/>
        <TextView
            android:id="@+id/titleTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:paddingLeft="6dp"
            android:textColor="@color/gray_deep"
            android:text="银行承兑汇票"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/bg_circle"
                android:gravity="center"
                android:backgroundTint="@color/circle_out">
                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_circle"
                    android:backgroundTint="@color/circle_in"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/orderCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:text=""/>
                    <TextView
                        android:id="@+id/orderCountLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:text="汇票总数"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:orientation="vertical">
            <View android:layout_width="20dp"
                  android:layout_height="2px"
                android:background="@color/light_red"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/invoiceCount"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:text="开票量"
                android:textSize="12sp"
                android:textColor="@color/gray_deep"/>
            <TextView
                android:id="@+id/clearCount"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:text="结清量"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@color/gray_deep"/>
            <TextView
                android:id="@+id/balanceCount"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:text="结余量"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@color/gray_deep"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">
        <View style="@style/Lines"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/gray"/>
        <TextView
            android:id="@+id/footerTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/gray_deep"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="立即查看"/>
    </LinearLayout>
</LinearLayout>