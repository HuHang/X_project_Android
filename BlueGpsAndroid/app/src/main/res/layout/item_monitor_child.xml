<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:background="#00ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/vinTV"
                    style="@style/monitor_item_key"
                    android:text="VIN:"
                    android:layout_weight="1"
                    android:gravity="center_vertical"/>
            <TextView
                    android:id="@+id/fenceStateTV"
                    android:layout_width="60dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="20dp"
                    android:textSize="14sp"
                    android:background="@drawable/bg_textview_border_no_background"
                    android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/iMeiTV"
                    style="@style/monitor_item_key"
                    android:text="IMEI:"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                <TextView
                        android:id="@+id/carBrandTV"
                        style="@style/monitor_item_key_small"
                        android:text="品牌:"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                <TextView
                        android:id="@+id/carTypeTV"
                        style="@style/monitor_item_key_small"
                        android:text="车型:"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/shopTV"
                    style="@style/monitor_item_key"
                    android:text="当前商户:"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/timeTV"
                    android:text="定位时间:"
                    style="@style/monitor_item_key"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>