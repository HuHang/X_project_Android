<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/titleImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_abstract_abnormal"/>
        <TextView
            android:id="@+id/titleTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:paddingLeft="6dp"
            android:textColor="@color/gray_deep"
            android:text="市场管理"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_height="80dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/bankBillCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="@color/light_orange"
                android:text="400"/>
            <TextView
                android:id="@+id/privateSellLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/gray_deep"
                android:text="金融机构开票(万元)"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
            <TextView
                android:id="@+id/supervisionFee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="@color/light_red"
                android:text="400"/>
            <TextView
                android:id="@+id/privateMoveLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="监管费(万元)"
                android:textColor="@color/gray_deep"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center">
             <TextView
                android:id="@+id/absentLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:textColor="@color/gray_deep"
                android:gravity="center_vertical"
                android:text="当月进店"/>
            <TextView
                android:id="@+id/currentMonthEnterShop"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3名"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textColor="@color/orange"/>
        </LinearLayout>
        <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:background="@color/gray_deep"/>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center">
            <TextView
                    android:id="@+id/absentFiveLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="10sp"
                    android:textColor="@color/gray_deep"
                    android:gravity="center_vertical"
                    android:text="当月撤店"/>
            <TextView
                    android:id="@+id/currentMonthRevokeShop"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="3台"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:textColor="@color/orange"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">
        <View style="@style/Lines"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/gray"/>
        <TextView
            android:id="@+id/footerTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/gray_deep"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="立即查看"/>
    </LinearLayout>
</LinearLayout>